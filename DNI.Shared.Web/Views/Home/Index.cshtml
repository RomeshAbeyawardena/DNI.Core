@model HomeIndexViewModel

@section headerSection
{
    @(Component.InvokeAsync<HeaderViewComponent>(Model.PageId))
}

@await Html.DisplayIfAsync(Model.DisplayValue, 
    (Component.InvokeAsync<HeroViewComponent>(Model.HeroViewComponentViewModel)), 
    (Component.InvokeAsync<HeroViewComponent>(Model.AlternateHeroViewComponentViewModel)))
